<%- include('../../shared/includes/head', { pageTitle: 'Signup'}) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Create New Account</h1>
        <% if (inputData.errMsg) { %>
            <section class='alert'>
                <h2>Invalid Input</h2>
                <p><%= inputData.errMsg %></p>
            </section>
        <% } %>
        <form action= "/signup" method = "POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken%>">
            <p>
                <label for="emailMember">Email</label>
                <input type="email" id="emailMember" name="email" value ="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="confirm-emailMember">Confirm Email</label>
                <input type="email" id="confirm-emailMember" name="confirm-email" value ="<%= inputData.confirmEmail %>"required>
            </p>
            <p>
                <label for="passwordMember">Password</label>
                <input type="password" id="passwordMember" name="password" minlength="6" value ="<%= inputData.password %>"required>
            </p>
            <hr>
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" id="fullname" name="fullname" value ="<%= inputData.fullname %>"required>
            </p>
            <p>
                <label for="address">Address</label>
                <input type="text" id="address" name="address" value ="<%= inputData.address %>"required>
            </p>
            <p>
                <label for="zipcode">Zip Code</label>
                <input type="text" id="zipcode" name="zipcode" minlength ="5" maxlength ="10" value ="<%= inputData.zipcode %>"required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" value ="<%= inputData.city %>"required>
            </p>
            <button class="btn">Create Account</button>
            <p id="switch-form">
                <a href="/login">Login</a>
            </p>
        </form>
    </main>

<%- include('../../shared/includes/footer')%>